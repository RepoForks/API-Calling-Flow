<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rohitss.apicallingflow_example.MainActivity">

    <Button
        android:id="@+id/btnRequestApi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:paddingBottom="4dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="4dp"
        android:text="Request API"/>

    <TextView
        android:id="@+id/tvDummyView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnRequestApi"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:text="@string/dummy_text"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btnReset"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/btnRequestApi"
        android:layout_toEndOf="@+id/btnRequestApi"
        android:layout_toRightOf="@+id/btnRequestApi"
        android:background="@android:drawable/ic_popup_sync"
        android:backgroundTint="#616161"
        tools:targetApi="lollipop"/>

</RelativeLayout>
